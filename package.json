{
  "name": "b_short",
  "version": "1.2.3",
  "type": "module",
  "description": "Lightning-fast CSS shorthand property expansion to longhand equivalents. Supports 35+ shorthands including flex, grid, animation, transition, mask, and more. TypeScript-first, minimal dependencies, perfect for CSS-in-JS and build tools.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "tsx benchmarks/expand.bench.ts",
    "size": "size-limit",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "outdated": "pnpm outdated",
    "update": "pnpm update",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit --fix",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alphabio/b_short.git"
  },
  "keywords": [
    "alignment",
    "animation",
    "build-tool",
    "columns",
    "css",
    "css-animation",
    "css-grid",
    "css-in-js",
    "expand",
    "flexbox",
    "grid",
    "grid-layout",
    "inset",
    "layout",
    "longhand",
    "mask",
    "masking",
    "motion-path",
    "multi-column",
    "offset",
    "place-content",
    "place-items",
    "postcss",
    "properties",
    "shorthand",
    "transition",
    "typescript"
  ],
  "author": "alphabio",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "bugs": {
    "url": "https://github.com/alphabio/b_short/issues"
  },
  "homepage": "https://github.com/alphabio/b_short#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/alphabio"
  },
  "size-limit": [
    {
      "name": "ESM (import)",
      "path": "dist/index.mjs",
      "limit": "120 KB"
    },
    {
      "name": "CJS (require)",
      "path": "dist/index.js",
      "limit": "125 KB"
    }
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "css-tree": "^3.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/css-tree": "^2.3.11",
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "size-limit": "^11.2.0",
    "tinybench": "^5.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.0",
    "vitest": "^3.2.4"
  }
}
